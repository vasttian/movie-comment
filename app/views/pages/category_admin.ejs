<%- include ../includes/header %>
<div class="container">
  <div class="col-md-5 col-md-offset-2" style="padding-top:70px">
	<div class="row">
	  <form action="/admin/movie/category" method="post" class="form-horizontal">
	  	<div class="modal-header">
		  <h2>增加电影分类</h2>
		</div>
		<div class="modal-body">
		  <div class="form-group">
			<label for="inputCategories" class="col-sm-3 control-label">分类名称</label>
			<div class="col-sm-9">
			  <input type="text" id="inputCategories" class="form-control" name="categories[name]" value="<%= categories.name %>">
			</div>
		  </div>
		</div>

		<div class="modal-footer">
		  <button class="btn btn-default" type="reset" data-dismiss="modal">重置</button>
		  <button class="btn btn-success" type="submit">提交</button>
		</div>
	  </form>
	</div>
  </div>
</div>

<%- include ../includes/footer %>
