<%- include ../includes/header %>
<%/*- include ../includes/navpanel */%>

<div class="col-md-4 col-md-offset-2" style="padding-top: 70px">
  <div class="row">
	<form class="form-horizontal" action="/user/signin" method="POST">
	  <div class="modal-header">
	  	<h2 style="color:#1170e4">登录一萌</h2>
	  </div>

	  <div class="modal-body library_content">
		<div class="form-group">
		  <label for="signinName" class="col-sm-3 control-label">用户名</label>
		  <div class="col-sm-9">
			<input type="text" id="signinName" class="form-control" name="user[name]">
		  </div>
		</div>
		<div class="form-group">
		  <label for="signinPassword" class="col-sm-3 control-label">密码</label>
		  <div class="col-sm-9">
			<input type="password" id="signinPassword" class="form-control" name="user[password]">
		  </div>
		</div>
		<div class="form-group">
      <div class="checkbox">
        <div class="pull-right">
          <a href="#" id="forgot_passwd"> 忘记密码？</a>
        </div>	
        <label class="col-sm-3 col-sm-offset-4">
          <input type="checkbox" name="savePassword">记住密码
        </label>
      </div>
    </div>
		
		<div class="modal-footer">
		  <button class="btn btn-default" type="reset">重置</button>
		<% /*  <button class="btn btn-success" type="submit">登录</button> */%>
		  <button class="btn btn-success" type="submit">登录</button>
		</div>
		<div class="form-group text-center">
      还没有账户？<a href="#" id="direct_register">点击注册</a>
    </div>
	  </div>
	</form>
  </div>
</div>
<script src="/js/signin.js"></script>
<%- include ../includes/footer %>	


