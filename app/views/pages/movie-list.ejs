<div class="col-md-12" style="max-height: 420px; padding-top: 15px">
  <div class="row">
		<table class="table table-hover table-bordered">
		  <thead>
			<tr class="tr-style">
			  <th class="th-width200 th-style">电影名字</th>
			  <th class="th-width200 th-style">导演</th>
			  <th class="th-width200 th-style">主演</th>
			  <th class="th-width250 th-style">制片国家/地区</th>
			  <th class="th-width150 th-style">上映日期</th>
			  <th class="th-width150 th-style">录入时间</th>
			  <th class="th-width100 th-style">片长</th>
			  <th class="th-width100 th-style">pv</th>
			  <th class="th-width70 th-style">查看</th>
			  <th class="th-width70 th-style">更新</th>
			  <th class="th-width70 th-style">删除</th>
			</tr>
		  </thead>
		  <tbody>
			<% movies.forEach(function (item, index) { %>
			<tr class="item-id-<%= item._id %>">
			  <td class="td-style"><%= item.title %></td>
			  <td class="td-style"><%= item.doctor %></td>
			  <td class="td-style"><%= item.protagonist %></td>
			  <td class="td-style"><%= item.country %></td>
			  <td class="td-style"><%= item.date %></td>
			  <td class="td-style"><%= moment(item.meta.createAt).format("YYYY/MM/DD") %></td>
			  <td class="td-style"><%= item.movieTime %></td>
			  <td class="td-style"><%= item.pv %></td>
			  <td class="td-style"><a target="_blank" href="/movie/<%= item._id %>">查看</a></td>
			  <td class="td-style"><button class="btn btn-primary updateMovie" data-id="<%= item._id %>">更新</button></td>
			  <td class="td-style"><button class="btn btn-danger del" type="button" data-id="<%= item._id %>">删除</button></td>
			</tr>
			<% }) %>
		  </tbody>
		</table>
  </div>
</div>
<script src="/js/admin.js"></script>
