<div class="col-md-12" style="max-height: 420px; padding-top: 15px">
  <div class="row">
	<table class="table table-hover table-bordered">
	  <thead>
		<tr class="tr-style">
		  <th class="th-width200">电影名字</th>
		  <th class="th-width200">导演</th>
		  <th class="th-width200">主演</th>
		  <th class="th-width250">制片国家/地区</th>
		  <th class="th-width150">上映日期</th>
		  <th class="th-width150">录入时间</th>
		  <th class="th-width100">片长</th>
		  <th class="th-width100">pv</th>
		  <th class="th-width70">查看</th>
		  <th class="th-width70">更新</th>
		  <th class="th-width70">删除</th>
		</tr>
	  </thead>
	  <tbody>
		<% movies.forEach(function (item, index) { %>
		<tr class="item-id-<%= item._id %>">
		  <td><%= item.title %></td>
		  <td><%= item.doctor %></td>
		  <td><%= item.protagonist %></td>
		  <td><%= item.country %></td>
		  <td><%= item.date %></td>
		  <td><%= moment(item.meta.createAt).format("YYYY/MM/DD") %></td>
		  <td><%= item.movieTime %></td>
		  <td><%= item.pv %></td>
		  <td><a target="_blank" href="/movie/<%= item._id %>">查看</a></td>
		  <td><button class="btn btn-primary updateMovie" data-id="<%= item._id %>">更新</a></td>
		  <td><button class="btn btn-danger del" type="button" data-id="<%= item._id %>">删除</button></td>
		</tr>
		<% }) %>
	  </tbody>
	</table>
  </div>
</div>
<script src="/js/admin.js"></script>
