<%- include ../includes/header %>
<div class="container container-style">
  <div class="row">
		<% categories.forEach(function (cat, index) { %>
	  <div class="panel panel-default">
			<div class="panel-heading">
		  	<h3>
					<a href="/results?cat=<%= cat._id%>&page=0"><%= cat.name %></a>
		  	</h3>
			</div>
			<div class="panel-body">
		  <% if (cat.movies && cat.movies.length > 0) { %>
				<% cat.movies.forEach(function (item, index) { %>
			  <div class="col-xs-6 col-md-3">
					<div class="thumbnail">
				  	<a href="/movie/<%= item._id %>">
							<% if (item.poster.indexOf("http") > -1) { %>
							<% /*通过http获取到的图片大小可能不一样，固定高度，不然布局会错乱，出现空白*/ %>
					  	<img src="<%= item.poster %>" alt="<%= item.title %>" style="height: 320px">
							<% } else { %>
					  	<img src="/images/poster/<%= item.poster %>" alt="<%= item.title %>" style="height: 320px">
							<% } %>
							<div class="caption">
					  		<h3><%=item.title %></h3>
					  		<p>
								<a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
					  		</p>
							</div>
				  	</a>
					</div>
			  </div>
				<% }) %>
		  <% } %>
			</div>
	  </div>
		<% }) %>
  </div>
</div>
<%- include ../includes/footer %>
