<%- include ../includes/header %>
<div class="container container-style">
<div class="col-md-10 col-md-offset-1" style="max-height: 800px; padding-top: 50px">
  <div class="row">

	<table class="table table-hover table-bordered">
	  <thead>
		<tr>
		  <th>电影名字</th>
		  <th>导演</th>
		  <th>主演</th>
		  <th>片长</th>
		  <th>国家</th>
		  <th>上映时间</th>
		  <th>录入时间</th>
		  <th>pv</th>
		  <th>查看</th>
		</tr>
	  </thead>
	  <tbody>
		<% movies.forEach(function (item, index) { %>
		<tr class="item-id-<%= item._id %>">
		  <td><%= item.title %></td>
		  <td><%= item.doctor %></td>
		  <td><%= item.protagonist %></td>
		  <td><%= item.movieTime %></td>
		  <td><%= item.country %></td>
		  <td><%= item.year %></td>
		  <td><%= moment(item.meta.createAt).format("YYYY/MM/DD") %></td>
		  <td><%= item.pv %></td>
		  <td><a target="_blank" href="/movie/<%= item._id %>">查看</a></td>
		</tr>
		<% }) %>
	  </tbody>
	</table>
  </div>
</div>
</div>

<script src="/js/admin.js"></script>
<%- include ../includes/footer %>