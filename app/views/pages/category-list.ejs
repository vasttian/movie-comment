
<div class="col-md-9 col-md-offset-1" style="max-height: 420px; padding-top: 15px">
  <div class="row">
	<table class="table table-hover table-bordered">
	  <thead>
		<tr class="tr-style">
		  <th class="th-style">分类名</th>
		  <th class="th-style">录入时间</th>
		  <th class="th-style">查看</th>
		  <th class="th-style">更新</th>
		  <th class="th-style">删除</th>
		</tr>
	  </thead>
	  <tbody>
		<% categories.forEach(function (item, index) { %>
		  <tr class="item-id-<%= item._id %>">
			<td class="td-style"><%= item.name %></td>
			<td class="td-style"><%= moment(item.meta.createAt).format("YYYY/MM/DD") %></td>
			<td class="td-style"><a target="_blank" href="/results?cat=<%= item._id%>&page=0">查看</a></td>
			<td class="td-style"><button class="btn btn-primary updateCategory" data-id="<%= item._id %>">更新</button></td>
			<td class="td-style">
			  <button class="btn btn-danger delCategory" type="button" data-id="<%= item._id %>" title="注意,分类下的所有电影都将被删除!">删除</button>
			</td>
		  </tr>
		<% }) %>
	  </tbody>
	</table>
  </div>
</div>
<script src="/js/category.js"></script>