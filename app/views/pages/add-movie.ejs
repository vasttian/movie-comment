<div class="col-md-7 col-md-offset-1" style="height: 420px; padding-top: 15px">
  <div class="row">
		<form id="addMovieForm" action="/admin/movie" method="post" class="form-horizontal" enctype='multipart/form-data'>

	  	<div class="modal-body">
  			<div class="form-group">
		  		<label for="douban" class="col-sm-3 control-label">豆瓣同步</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="douban" class="form-control">
		  		</div>
  			</div>

  			<% if(movie._id){%>
		  	<input type="hidden" name="movie[_id]" value="<%= movie._id %>">
  			<% }%>

  			<div class="form-group">
		  		<label for="inputCategories" class="col-sm-3 control-label">电影分类</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputCategories" class="form-control" name="movie[categoriesName]" value="<%= movie.categoriesName %>">
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label class="col-sm-3 control-label">分类选择</label>
		  		<div class="col-sm-9">
	  				<% categories.forEach(function(cat, index) { %>
			  		<label class="radio-inline">
		  				<% if (movie._id) { %>
				  		<input type="radio" <%=cat._id.toString() == movie.categories.toString()? "checked" :"" %> name="movie[categories]" value="<%=cat._id%>">
			  	  	<%=cat.name%>
		  				<% } else { %>
				  		<input type="radio" name="movie[categories]" value="<%=cat._id%>">
			  	  	<%=cat.name%>
		  				<% } %>	
			  		</label>
	  				<% }) %>
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputTitle" class="col-sm-3 control-label">电影名字</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputTitle" class="form-control" name="movie[title]" value="<%= movie.title %>">
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputDoctor" class="col-sm-3 control-label">导演</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputDoctor" class="form-control" name="movie[doctor]" value="<%= movie.doctor %>">
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputProtagonist" class="col-sm-3 control-label">主演</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputProtagonist" class="form-control" name="movie[protagonist]" value="<%= movie.protagonist %>">
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputCountry" class="col-sm-3 control-label">制片国家/地区</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputCountry" class="form-control" name="movie[country]" value="<%= movie.country %>">
		  		</div>
  			</div>
				<div class="form-group">
		  		<label for="inputLanguage" class="col-sm-3 control-label">语言</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputLanguage" class="form-control" name="movie[language]" value="<%= movie.language %>">
		  		</div>
  			</div>
				<div class="form-group">
		  		<label for="inputPoster" class="col-sm-3 control-label">海报地址</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputPoster" class="form-control" name="movie[poster]" value="<%= movie.poster %>">
		  		</div>
  			</div>
				<div class="form-group">
		  		<label for="uploadPoster" class="col-sm-3 control-label">海报上传</label>
		  		<div class="col-sm-9">
	  				<input type="file" id="uploadPoster" name="uploadPoster">
		  		</div>
  			</div>
				<div class="form-group">
		  		<label for="inputFlash" class="col-sm-3 control-label">片源地址</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputFlash" class="form-control" name="movie[flash]" value="<%= movie.flash %>">
		  		</div>
  			</div>
				<div class="form-group">
		  		<label for="inputDate" class="col-sm-3 control-label">上映日期</label>
		  		<div class="col-sm-9">
	  				<input type="text" id="inputDate" class="form-control" name="movie[date]" value="<%= movie.date %>">
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputMovieTime" class="col-sm-3 control-label">片长</label>
		  		<div class="col-sm-9">
		  			<div class="input-group">
	  					<input type="text" id="inputMovieTime" class="form-control" name="movie[movieTime]" value="<%= movie.movieTime %>">
	  					<span class="input-group-addon">分钟</span>
	  				</div>
		  		</div>
  			</div>
  			<div class="form-group">
		  		<label for="inputSummary" class="col-sm-3 control-label">简介</label>
		  		<div class="col-sm-9">
	  				<textarea rows="6" id="inputSummary" class="form-control" name="movie[summary]"><%= movie.summary %></textarea>
		  		</div>
  			</div>
	  	</div>
	  	<div class="modal-footer">
  			<button class="btn btn-default" type="reset" data-dismiss="modal">重置</button>
  			<button class="btn btn-success" type="submit">提交</button>
	  	</div>
		</form>
  </div>
</div>
<script src="/js/add-movie.js"></script>