<%- include ../includes/header %>
<div class="container container-style">
  <div class="row">
		<div class="panel panel-primary">
	  	<div class="panel-heading">
				<h3><%= keyword %></h3>
	  	</div>
	  	<div class="panel-body">
			<% if (movies && movies.length > 0) { %>
		  	<% movies.forEach(function (item, index) { %>
				<div class="col-md-3">
			  	<div class="thumbnail">
						<a href="/movie/<%= item._id %>">
							<% if(item.poster.indexOf("http") > -1) { %>
					  	<img src="<%= item.poster %>" alt="<%= item.title %>">
							<% } else { %>
					  	<img src="/images/poster/<%= item.poster %>" alt="<%= item.title %>">
							<% } %>
				  		<div class="caption">
								<h3><%=item.title %></h3>
								<p>
					  			<a href="/movie/<%= item._id %>" class="btn btn-primary" role="button">观看预告片</a>
								</p>
				  		</div>
						</a>
			  	</div>
				</div>
		  	<% }) %>
			<% } %>
	  	</div>
		</div>

		<ul class="pagination">
	  <% for (var i = 1; i <= totalPage; i++) { %>
			<% if (currentPage == i) { %>
		  <li class="active">
				<span><%= currentPage %></span>
		  </li>
			<% } else { %>
		  <li>
				<a href="/results?page=<%= i %>&<%= query %>"> 
			  <%= i %> 
				</a>
		  </li>
			<% } %>
	  <% } %>
		</ul>
  </div>
</div>

<%- include ../includes/footer %>



